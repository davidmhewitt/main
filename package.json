    "graph": "nx graph"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.17.0",
    "cross-spawn": "7.0.3",
    "eslint": "8.9.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "jest": "27.5.1",
    "lint-staged": "12.3.4",
    "prettier": "2.5.1",
    "@nrwl/workspace": "13.8.3",
    "@nrwl/cli": "13.8.3",
    "@nrwl/tao": "13.8.3",
    "sinon": "12.0.1",
    "typescript": "4.2.4"
  },
  "lint-staged": {
    "packages/**/*.js": "eslint",
    "*.js": "eslint"
